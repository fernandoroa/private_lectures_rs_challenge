{% extends "layout.njk" %}
{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Nome completo</div>
        <div>{{ student.name }}</div>
      </div>
      <div class="item">
        <div>e-mail</div>
        <div>{{ student.email }}</div>
      </div>
      <div class="item">
        <div>Ano Escolar</div>
        <div>{{ student.school_year }}</div>
      </div>
      <div class="item">
        <div>Carga horária</div>
        <div>{{ student.hour_intensity }}</div>
      </div>
      <div class="item">
        <div>Aniversário</div>
        <div>{{ student.birth }}</div>
      </div>
      <div class="button_container">
        <a href="{{ student.id }}/edit" class="button">Editar</a>
        <form id="form-delete" action="/students?_method=DELETE" method="POST">
          <input type="hidden" name="id" value={{ student.id }}>
          <button type="submit">Deletar</button>
        </form>
      </div>
      {% include 'confirm.njk' %}
    </section>
  </div>
{% endblock content %}